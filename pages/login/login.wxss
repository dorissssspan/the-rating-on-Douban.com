/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}

.logo {
  width: 144rpx;
  height: 144rpx;
  margin: 40rpx 0;
}

.btn-login {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  border-radius: 10rpx;
}

.wechat {
  background-color: #42bd55;
  color: #fff;
}

.douban {
  background-color: #fff;
  color: #42bd55;
  border: 2rpx solid #42bd55;
  margin-top: 30rpx;
}

.agreement {
  columns: #9d9d9d;
  font-size: 25rpx;
  display: flex;
  position: absolute;
  bottom: 50rpx;
}

.agreement .open {
  color: #4bb65c;
  margin-left: 10rpx;
}